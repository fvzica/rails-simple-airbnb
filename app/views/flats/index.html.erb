  <div class="container">
                    <h1> All our flats (<%=@flats.count%>)</h1>
                    <ul> <% @flats.each do |flat|%>
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                      <div class="col">
                        <div class="card h-100">
                          <img src="..." class="card-img-top" alt="...">
                          <div class="card-body">
                            <h5 class="card-title"><%= link_to flat.name, flat_path(flat) %></h5>
                            <p class="card-text">   <%= link_to flat.address, flat_path(flat) %></p>
                          </div>
                          <div class="card-footer">
                            <small class="text-muted"><%= link_to "Edit", edit_flat_path(flat)</small>
                          </div>
                        </div>
                      </div>
                    </div>
  <% end %>
  </div>
